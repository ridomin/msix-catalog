<Page
    x:Class="msix.catalog.app.Views.StoreAppsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:msix.catalog.app.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:msix.catalog.app.ViewModels"
    Title="StoreAppsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewModels:PackagesViewModel />
    </Page.DataContext>

    <Grid DataContext="{Binding}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Margin="5"
                FontSize="24"
                Text="Store Apps" />
            <ScrollViewer Grid.Row="1">
                <ItemsControl
                    VerticalContentAlignment="Top"
                    ItemTemplate="{StaticResource PackageInfoTemplate}"
                    ItemsSource="{Binding StorePackages}" />
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
